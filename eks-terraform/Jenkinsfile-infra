pipeline {
    agent any

    options {
        timestamps()       // OK
        disableConcurrentBuilds()
    }

    environment {
        TF_VERSION = "1.9.8"
        AWS_REGION = "eu-west-1"
    }

    stages {

        stage('Init Colors') {
            steps {
                script {
                    ansi = { msg -> echo "\u001B[36m$msg\u001B[0m" }
                }
            }
        }

        stage('Checkout') {
            steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm']) {
                    ansi("ğŸ“¥ Checking out repository...")
                    checkout scm
                }
            }
        }

        stage('Install Terraform') {
            steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm']) {
                    ansi("â¬‡ Installing Terraformâ€¦")

                    sh """
                        curl -o terraform.zip https://releases.hashicorp.com/terraform/${TF_VERSION}/terraform_${TF_VERSION}_linux_amd64.zip
                        unzip terraform.zip
                        sudo mv terraform /usr/local/bin/
                        terraform version
                    """
                }
            }
        }

        stage('Terraform Init') {
            steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm']) {
                    ansi("ğŸš€ Running terraform initâ€¦")
                    sh "terraform init"
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm']) {
                    ansi("ğŸ§ª Validating Terraform codeâ€¦")
                    sh "terraform validate"
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm']) {
                    ansi("ğŸ“Š Running terraform planâ€¦")
                    sh "terraform plan -out=tfplan"
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                wrap([$class: 'AnsiColorBuildWrapper', colorMapName: 'xterm']) {
                    ansi("âš¡ Applying Terraform changesâ€¦")
                    sh "terraform apply -auto-approve tfplan"
                }
            }
        }

    } // stages end

    post {
        success {
            echo "ğŸ‰ Terraform Infrastructure Deployment Completed Successfully!"
        }
        failure {
            echo "âŒ Terraform Deployment Failed!"
        }
    }
}
