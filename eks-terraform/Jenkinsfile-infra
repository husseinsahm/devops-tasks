pipeline {
    agent any

    options {
        ansiColor('xterm')       // Enable colors
        timestamps()             // Add timestamps to logs
        disableConcurrentBuilds() // Prevent running multiple infra builds
    }

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-creds')
        AWS_SECRET_ACCESS_KEY = credentials('aws-creds')
        AWS_REGION            = "us-east-1"
        TF_WORKSPACE          = "default"
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo "\033[1;34mğŸ“¥ Checking out repository...\033[0m"
                git branch: 'main',
                    url: 'https://github.com/husseinsahm/devops-tasks.git'
            }
        }

        stage('Terraform Init') {
            steps {
                dir('eks-terraform') {
                    echo "\033[1;33mğŸš€ Running Terraform Init...\033[0m"
                    sh 'terraform init -input=false'
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                dir('eks-terraform') {
                    echo "\033[1;36mğŸ” Validating Terraform configuration...\033[0m"
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                dir('eks-terraform') {
                    echo "\033[1;35mğŸ“ Creating Terraform Plan...\033[0m"
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Approval Before Apply') {
            steps {
                script {
                    def userInput = input(
                        id: 'Proceed',
                        message: "\033[1;33mâš ï¸ Do you want to Apply Terraform changes?\033[0m",
                        parameters: [
                            [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Apply changes?', name: 'Approve']
                        ]
                    )

                    if (!userInput) {
                        error("\033[1;31mâŒ Terraform apply aborted by user.\033[0m")
                    }
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                dir('eks-terraform') {
                    echo "\033[1;32mğŸš§ Applying Terraform Plan...\033[0m"
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Show Outputs') {
            steps {
                dir('eks-terraform') {
                    echo "\033[1;34mğŸ“¤ Terraform Outputs:\033[0m"
                    sh 'terraform output'
                }
            }
        }

    } // end stages

    post {
        success {
            echo "\033[1;32mğŸ‰ Infrastructure deployed successfully!\033[0m"
        }
        failure {
            echo "\033[1;31mğŸ’¥ Infrastructure deployment failed!\033[0m"
        }
    }
}
