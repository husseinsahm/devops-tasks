pipeline {
    agent any

    environment {
        TF_VERSION = "1.9.8"
    }

    options {
        timestamps()
        disableConcurrentBuilds()
    }

    stages {

        stage('Checkout') {
            steps {
                echo "üì• Checking out code..."
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {

                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-creds',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {

                    echo "üöÄ Initializing Terraform..."
                    sh """
                        cd eks-terraform
                        terraform init
                    """
                }
            }
        }

        stage('Terraform Validate') {
            steps {
                sh """
                    cd eks-terraform
                    terraform validate
                """
            }
        }

        stage('Terraform Plan') {
            steps {

                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-creds',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {

                    echo "üìä Running Terraform Plan..."
                    sh """
                        cd eks-terraform
                        terraform plan -var-file=terraform.tfvars -out=tfplan
                    """
                }
            }
        }

        stage('Terraform Apply') {
            steps {

                withCredentials([
                    usernamePassword(
                        credentialsId: 'aws-creds',
                        usernameVariable: 'AWS_ACCESS_KEY_ID',
                        passwordVariable: 'AWS_SECRET_ACCESS_KEY'
                    )
                ]) {

                    echo "‚ö° Applying Terraform..."
                    sh """
                        cd eks-terraform
                        terraform apply -auto-approve tfplan
                    """
                }
            }
        }
    }

    post {
        success {
            echo "üéâ Terraform Infrastructure Deployment Completed Successfully!"
        }
        failure {
            echo "‚ùå Terraform Deployment Failed!"
        }
    }
}
